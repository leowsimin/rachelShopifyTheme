{{ 'section-second-homepage.css' | asset_url | stylesheet_tag }}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Kristi&family=Syncopate:wght@700&display=swap" rel="stylesheet">

<link href="https://db.onlinewebfonts.com/c/1a5c2d8bbd4e28d99a6efcbb9a5b378f?family=JejuMyeongjo" rel="stylesheet">

<div class="homePagePanel2">
    <h2 class="homePageTestimony">{{settings.homepage_title3}}</h2>

    <div class="homePageAllPeople">

        <img class="homePageOpenQuote" src="{{ 'openQuotation.svg' | asset_url }}"/>

        <div class="homePagePeople1">
            <img class="homePage-luggage1-image" src="{{ 'homepage-luggage1.svg' | asset_url }}"/>
            <h3>{{settings.homepage_person1}}</h3>
            <div class="homePageDescription">
                <p>{{settings.homepage_person1_testimonial}}</p>
            </div>
        </div>


        <div class="homePagePeople2" >
            <img class="homePage-luggage2-image" src="{{ 'homepage-luggage2.svg' | asset_url }}"/>
            <h3>{{settings.homepage_person2}}</h3>
            <div class="homePageDescription">
                <p>{{settings.homepage_person2_testimonial}}</p>
            </div>
        </div>

        <div class="homePagePeople3">
            <img class="homePage-luggage3-image" src="{{ 'homepage-luggage3.svg' | asset_url }}"/>
            <h3>{{settings.homepage_person3}}</h3>
            <div class="homePageDescription">
                <p>{{settings.homepage_person3_testimonial}}</p>
            </div>
        </div>

        <img class="homePageCloseQuote" src="{{ 'closeQuotation.svg' | asset_url }}"/>

    </div>
</div>


{% schema %}
  {
    "name": "Homepage Second Section",
    "settings": [
        {
        "type": "text",
        "id": "homepage_title3",
        "label": "Testimonial Title",
        "default": "What do people say about us?"
      },
      {
        "type": "text",
        "id": "homepage_person1",
        "label": "Person 1 Testimonial",
        "default": "ALBERT ONG"
      },
      {
        "type": "text",
        "id": "homepage_person2",
        "label": "Person 2 Testimonial",
        "default": "PANG LI SHIN"
      },
      {
        "type": "text",
        "id": "homepage_person3",
        "label": "Person 3 Testimonial",
        "default": "JENNY TAY"
      },
      {
        "type": "textarea",
        "id": "homepage_person1_testimonial",
        "label": "Person 1 Testimonial Description",
        "default": "Repaired my luggage with Tner and really happy with Thomas's workmanship.Highly recommended!"
      },
      {
        "type": "textarea",
        "id": "homepage_person2_testimonial",
        "label": "Person 2 Testimonial Description",
        "default": "I was panicking for my last minute trip to Japan, feeling so unprepared. My friend recommended me to rent a luggage with Tner and I realised that I can even buy disposable toothbrushes, one-time use towels, make up remover capsules from them at the same time! If only the luggage can be delivered to me for free, it would be 100% perfect."
      },
      {
        "type": "textarea",
        "id": "homepage_person3_testimonial",
        "label": "Person 3 Testimonial Description",
        "default": "Tner is an interesting concept that I stumbled upon when I was researching on buying a luggage. Never knew I can rent one! It was easy and fuss free, will rent again #supportlocal!"
      }
    ],
    "presets": [
        {
            "name": "Homepage Second Section"
        }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

