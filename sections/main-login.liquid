{%- style -%}

.loginPageParentContainer {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #FAF6EE;

    padding-top: 4%;
    padding-bottom: 4%;
}

.loginPageContainer {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;

    width: 80%;
    height: 80%;

    border-radius: 20px;
    background: #FFF;
    box-shadow: 0px 4px 20px 0px rgba(0, 0, 0, 0.25);
}

.loginPageHeader {
    position: relative;
    display: block;
    text-align: center;
    top: -30px;
}

.loginPageHeader h1 {
    color: #FFA665;
    text-align: center;
    font-family: Kristi;
    font-size: 100px;
    font-style: normal;
    font-weight: 400;
    letter-spacing: 17px;
    line-height: 1;

    margin-top: 60px;
    margin-bottom: 0%;
}

.loginPageHeader h2 {
    color: #0D2610;
    font-family: Syncopate;
    font-size: 40px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    white-space: nowrap;
    line-height: 0;

    position: absolute;
    left: 50%;
    top: 70%;
    transform: translate(-50%, -50%);
    margin-bottom: 0;
}

.loginPageBody {
    display: flex;
    justify-content: center;
    width: 100%;

    margin-bottom: 6%;
}

.loginPageBodyRight {
    flex: 6;
}

.loginPageBodyLeft {
    display: flex;
    justify-content: flex-end;
    flex: 4;
}

.loginPageGlobe {
    width: 230px;
}

.loginPageEmail {
    background: url('{{ 'loginPageEmail.svg' | asset_url }}') no-repeat scroll left center, #FAF6EE;
    background-size: 25px;
    background-position: 15px center;
    width: 58%;
    height: 50px;

    border: none;
    border-radius: 10px;
    box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.25);
    padding-left: 8%;

    color: rgba(13, 38, 16, 0.50);
    text-align: left;
    font-family: JejuMyeongjo;
    font-size: 15px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

.loginPagePassword {
    background: url('{{ 'loginPagePassword.svg' | asset_url }}') no-repeat scroll left center, #FAF6EE;
    background-size: 25px;
    background-position: 15px center;
    width: 58%;
    height: 50px;

    border: none;
    border-radius: 10px;
    box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.25);
    padding-left: 8%;

    color: rgba(13, 38, 16, 0.50);
    text-align: left;
    font-family: JejuMyeongjo;
    font-size: 15px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

.loginPageInput {
    padding-top: 1.5%;
    padding-bottom: 1.5%;
    width: 100%;

    display: block;
    text-align: center;
}

.loginPageEmailInput {
    padding-top: 6%;
    padding-bottom: 1.5%;
    width: 100%;

    display: block;
    text-align: center;
}

.loginPageSubmit {
    background: none;
    border-radius: 10px;
    border: 1px solid #FFA665;

    width: 58%;
    height: 40px;

    color: #FFA665;
    text-align: center;
    font-family: JejuMyeongjo;
    font-size: 15px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

.loginPageHelp {
    display: flex;
    flex-direction: column;
    text-align: center;

    color: #0D2610;
    font-family: JejuMyeongjo;
    font-size: 13px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;

    margin-top: 2%;
}

.loginPageHelp a {
  margin-bottom: 1.5%;
  text-decoration: none;

  width: auto;
}

.loginPageEmail:hover{
    background-color: #EEE5D2;
}

.loginPageEmail:focus {
    background-color: #EEE5D2;
    outline: none;
}

.loginPagePassword:hover{
    background-color: #EEE5D2;
}

.loginPagePassword:focus {
    background-color: #EEE5D2;
    outline: none;
}

.loginPageSubmit:hover {
    background-color: #FFA665;
    color: #FAF5EE;
}

{%- comment -%}
Shopify Style Code
{%- endcomment -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- comment -%}
Recovery Page HTML
{%- endcomment -%}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Kristi&family=Syncopate:wght@700&display=swap" rel="stylesheet">

<h1 id="recover" tabindex="-1">
  {{ 'customer.recover_password.title' | t }}
</h1>
<div>
  <p>
    {{ 'customer.recover_password.subtext' | t }}
  </p>

  {%- form 'recover_customer_password' -%}
    {% assign recover_success = form.posted_successfully? %}
    <div class="field">
      <input
        type="email"
        value=""
        name="email"
        id="RecoverEmail"
        autocorrect="off"
        autocapitalize="off"
        autocomplete="email"
        {% if form.errors %}
          aria-invalid="true"
          aria-describedby="RecoverEmail-email-error"
          autofocus
        {% endif %}
        placeholder="{{ 'customer.login_page.email' | t }}"
      >
      <label for="RecoverEmail">
        {{ 'customer.login_page.email' | t }}
      </label>
    </div>
    {%- if form.errors -%}
      <small id="RecoverEmail-email-error" class="form__message">
        <svg aria-hidden="true" focusable="false" viewBox="0 0 13 13">
          <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
          <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
