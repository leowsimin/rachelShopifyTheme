{%- javascript -%}

{% raw %}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log("hasError:", {{ form.errors contains 'email' | json }});
    var hasErrorValue = {{ form.errors contains 'email' | json }};

    if (hasErrorValue) {
      var emailElement = document.getElementById("registerpage-email-input");
      if (emailElement) {
        emailElement.style.paddingBottom = '2%';
      }
    }
  });
</script>
{% endraw %}


