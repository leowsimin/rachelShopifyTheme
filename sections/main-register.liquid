{%- javascript -%}
document.addEventListener('DOMContentLoaded', function () {

  // Error Messages
  var hasEmailErrorValue = document.getElementById("registerpage-email-input").getAttribute("data-has-error") === 'true';
  var hasPasswordErrorValue = document.getElementById("registerpage-password-input").getAttribute("data-has-error") === 'true';
  var emailElement = document.getElementById("registerpage-email-input");
  var passwordElement = document.getElementById("registerpage-password-input");

  if (hasEmailErrorValue) {
    if (emailElement) {
      emailElement.style.paddingBottom = '1%';
    }
  }

  if (hasPasswordErrorValue) {
    if (passwordElement) {
      passwordElement.style.paddingBottom = '1%';
    }
  }

  // Password Confirmation
  var form = document.getElementById("create_customer");
  var passwordInput = document.getElementById("RegisterForm-password");
  var confirmPasswordInput = document.getElementById("RegisterForm-confirm-password");
  var passwordError = document.getElementById("registerpage-password-error");
  var confirmPasswordElement = document.getElementById("registerpage-confirm-password-input");

  function validatePasswordMatch() {
    var password = passwordInput.value;
    var confirmPassword = confirmPasswordInput.value;

    // Check if Confirm Password is not empty
    if (confirmPassword) {
      // Check if passwords match
      if (password === confirmPassword) {
        passwordError.style.display = 'none'; // Hide the error message
        confirmPasswordElement.style.paddingBottom = "6%";
      } else {
        passwordError.style.display = 'flex'; // Display the error message
        confirmPasswordElement.style.paddingBottom = "1%";
      }
    } else {
      passwordError.style.display = 'none'; // Hide the error message if Confirm Password is empty
      confirmPasswordElement.style.paddingBottom = "6%";
    }
  }

  // Add input event listeners
  passwordInput.addEventListener('input', validatePasswordMatch);
  confirmPasswordInput.addEventListener('input', validatePasswordMatch);

  // Add submit event listener
  form.addEventListener('submit', function (e) {
    var password = passwordInput.value;
    var confirmPassword = confirmPasswordInput.value;

    // Check if passwords don't match
    if (password !== confirmPassword) {
      e.preventDefault();
      passwordError.style.display = "flex"; // Display the confirmation password error
    }
  });

  // Email and Password Error Fixed
  var emailInput = document.getElementById("RegisterForm-email");
  var passwordInput = document.getElementById("RegisterForm-password");

  // Add input event listeners to email and password fields
  emailInput.addEventListener('input', function () {
    var emailError = document.getElementById("RegisterForm-email-error");
    if (emailError && emailInput.value.trim() != "") {
      emailError.style.display = 'none';
      emailElement.style.paddingBottom = '6%';
    }
  });

  passwordInput.addEventListener('input', function () {
    var passwordError = document.getElementById("RegisterForm-password-error");
    if (passwordError && passwordInput.value.trim() != "") {
      passwordError.style.display = 'none';
      passwordElement.style.paddingBottom = '6%';
    }
  });
});

{%- endjavascript -%}
