{%- style -%}
.registerPageParentContainer {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 87vh;
}

.registerPageContainer {
    display: flex;
    align-items: center;
    flex-direction: column;

    width: 80%;
    height: 90%;

    border-radius: 20px;
    background: #FFF;
    box-shadow: 0px 4px 20px 0px rgba(0, 0, 0, 0.25);
}

.registerPageHeader {
    position: relative;
    display: block;
    text-align: center;

    margin-top: 2%;
}

.registerPageHeader h1 {
    color: #FFA665;
    text-align: center;
    font-family: Kristi;
    font-size: 100px;
    font-style: normal;
    font-weight: 400;
    letter-spacing: 17px;
    line-height: 1;

    margin-top: 0px;
    margin-bottom: 0%;
}

.registerPageHeader h2 {
    color: #0D2610;
    font-family: Syncopate;
    font-size: 40px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    white-space: nowrap;
    line-height: 0;

    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    margin-bottom: 0;
}

.registerPageBody {
    display: flex;
    flex: 1;
    justify-content: center;
    width: 100%;
}

.registerPageBodyRight {
    display: flex;
    justify-content: flex-start;
    flex: 4;
}

.registerPageBodyLeft {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 4%;

    flex: 6;
}

.registerPageImage {
    width: 320px;

    margin-bottom: 5%;
}

.registerPageInput {
    display: block;
    text-align: center;
    margin-left: auto;
    margin-right: auto;

    width: 100%;
    padding-bottom: 6%;
}

#registerpage-email-input {
    display: block;
    text-align: center;
    margin-left: auto;
    margin-right: auto;

    width: 100%;
    padding-bottom: 6%;
}

#registerpage-email-input {
    display: block;
    text-align: center;
    margin-left: auto;
    margin-right: auto;

    width: 100%;

    padding-bottom: 6%;
}

.registerPageNameInput {
    width: 45%;

    padding-bottom: 9%;
}

.registerPagePassword , 
.registerPagePhoneNumber , 
.registerPageEmail , 
.registerPageConfirmPassword {
    width: 100%;
    height: 45px;

    padding-left: 5%;

    border-radius: 5px;
    background: #FAF6EE;
    box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.25);

    color: rgba(13, 38, 16, 0.50);
    text-align: left;
    font-family: JejuMyeongjo;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    border: none;
}

.registerPageFirstName {
    width: 100%;
    height: 43px;
    padding-left: 10%;

    border-radius: 5px;
    background: #FAF6EE;
    box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.25);

    color: rgba(13, 38, 16, 0.50);
    text-align: left;
    font-family: JejuMyeongjo;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    border: none;

    margin-right: 100px;
}

.registerPageLastName {
    width: 100%;
    height: 43px;
    padding-left: 10%;

    border-radius: 5px;
    background: #FAF6EE;
    box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.25);

    color: rgba(13, 38, 16, 0.50);
    text-align: left;
    font-family: JejuMyeongjo;
    font-size: 15px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    border: none;
}

.registerPageName {
    display: flex;
    width: 100%;
    height: 12%;

    justify-content: space-between;
    align-items:  center;
}

.registerPageSubmit {
    width: 40%;
    height: 45px;

    border-radius: 10px;
    background: #FFA665;

    color: #FFF;
    text-align: center;
    font-family: JejuMyeongjo;
    font-size: 15px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    border: none;
}

